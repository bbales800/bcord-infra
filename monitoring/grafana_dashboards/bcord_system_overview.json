{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "Prometheus",
        "enable": true,
        "hide": false,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "BCord System Events",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "iteration": 1,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "Backend Availability (HTTP Probe)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"bcord\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "options": {"orientation": "auto", "reduceOptions": {"calcs": ["last"], "fields": "", "values": false}},
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Redis Memory Usage (MB)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "redis_memory_used_bytes / 1024 / 1024",
          "legendFormat": "Memory Used (MB)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes",
          "color": {"mode": "palette-classic"},
          "thresholds": {"mode": "absolute", "steps": [{"color": "green"}, {"color": "red", "value": 100}]}
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Redis Commands Processed per Second",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[1m])",
          "legendFormat": "Commands/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "ops", "color": {"mode": "palette-classic"}}},
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Keyspace Hits vs Misses",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "rate(redis_keyspace_hits_total[5m])", "legendFormat": "Hits", "refId": "A"},
        {"expr": "rate(redis_keyspace_misses_total[5m])", "legendFormat": "Misses", "refId": "B"}
      ],
      "fieldConfig": {"defaults": {"unit": "ops", "color": {"mode": "continuous-GrYlRd"}}},
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8}
    },
    {
      "type": "timeseries",
      "title": "Prometheus Target Health",
      "datasource": "Prometheus",
      "targets": [{"expr": "up", "legendFormat": "{{job}}", "refId": "A"}],
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8}
    },
    {
      "type": "timeseries",
      "title": "Redis Connected Clients",
      "datasource": "Prometheus",
      "targets": [
        {"expr": "redis_connected_clients", "legendFormat": "Clients", "refId": "A"}
      ],
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8}
    }
  ],
  "refresh": "10s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["bcord", "overview", "monitoring"],
  "templating": {"list": []},
  "time": {"from": "now-15m", "to": "now"},
  "timezone": "",
  "title": "BCord System Overview",
  "uid": "bcord-overview",
  "version": 1
}

